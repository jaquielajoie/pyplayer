<AppContainer>
    id: app_view
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        size: root.width, root.height

        BoxLayout:
            id: top_half
            orientation: "vertical"

            BoxLayout:
                orientation: "vertical"

                FileChooserListView:
                    id: midi_filechooser
                    on_selection: app_view.selected(midi_filechooser.selection)
                    path: "/Users/jackie/Documents/pyplayer/src/midi/"

                Label:
                    id: midifile_label
                    color: (1, 0, 0, 0.65)
                    text: "No file selected, cannot start!"
                    font_size: 16

        BoxLayout:
            id: bottom_half
            orientation: "vertical"

            BoxLayout:
                orientation: "horizontal"

                BoxLayout:
                    orientation: "vertical"

                    Label:
                        id: velocity_slider_label
                        text: "Shift Velocity"
                        font_size: 24
                        color: (1, 1, 1, 0.65)

                    Label:
                        id: velocity_slider_out
                        text: "0"
                        font_size: 16
                        color: (0.65, 0.65, 0.65, 0.76)

                    Slider:
                        min: -24
                        max: 24
                        step: 1
                        orientation: "horizontal"
                        on_value: root.slide_velocity(*args)

                BoxLayout:
                    orientation: "vertical"

                    Label:
                        id: bpm_slider_label
                        text: "BPM"
                        font_size: 24
                        color: (1, 1, 1, 0.65)


                    Label:
                        id: bpm_slider_out
                        text: "60"
                        font_size: 16
                        color: (0.65, 0.65, 0.65, 0.76)


                    Slider:
                        min: 40
                        max: 240
                        step: 1
                        orientation: "horizontal"
                        on_value: root.slide_bpm(*args)

            BoxLayout:
                orientation: "horizontal"

                BoxLayout:
                    orientation: "vertical"

                    Label:
                        id: pitch_slider_label
                        text: "Pitch Shift"
                        font_size: 24
                        color: (1, 1, 1, 0.65)

                    Label:
                        id: pitch_slider_out
                        text: "0"
                        font_size: 16
                        color: (0.65, 0.65, 0.65, 0.85)

                    Slider:
                        min: -12
                        max: 12
                        step: 1
                        orientation: "horizontal"
                        on_value: root.slide_pitch(*args)

                BoxLayout:
                    orientation: "vertical"

                    Label:
                        id: ngram_slider_label
                        text: "nGram Length"
                        font_size: 24
                        color: (1, 1, 1, 0.65)

                    Label:
                        id: ngram_slider_out
                        text: "1"
                        font_size: 16
                        color: (0.65, 0.65, 0.65, 0.85)

                    Slider:
                        min: 1
                        max: 16
                        step: 1
                        orientation: "horizontal"
                        on_value: root.slide_ngram(*args)

            BoxLayout:
                orientation: "horizontal"

                BoxLayout:
                    orientation: "vertical"

                    TextInput:
                        id: iters_input
                        hint_text:'Number of Iterations'
                        background_color: (0.3, 0.3, 0.3, 0.65)
                        on_text: root.validate_int()

                    Label:
                        id: iters_valid_label
                        text: "Invalid Iteration #"
                        font_size: 12
                        color: (1, 0, 0, 0.65)

                Button:
                    font_size: 16
                    background_normal: ''
                    background_color: (0, 1, 0, 0.65)
                    text: "Start"
                    on_press: root.start_press()

                Button:
                    font_size: 16
                    background_normal: ''
                    background_color: (1, 0, 0, 0.45)
                    text: "Stop Playing"
                    on_press: root.end_press()
