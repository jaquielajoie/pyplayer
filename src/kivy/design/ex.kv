<FileChooserContainer>
    id: filechooser_view
    BoxLayout:
        orientation: "horizontal"
        spacing: 10
        size: root.width, root.height

        FileChooserListView:
            id: midi_filechooser
            on_selection: main_view.selected(midi_filechooser.selection)



<Label>
    font_size: 32

<Button>
    font_size: 16
    background_normal: ''
    size_hint: (0.25, 0.25)
    background_color: (1, 0, 1, 0.65)

<RoundedButton@Button>
    background_normal: ''
    background_color: (0, 0, 0, 0)
    canvas.before:
        Color:
            rgba: (1, 0.5, 0.25, 0.65)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]

<TextInput>
    background_color: (0, 1, 0, 0.35)

<MainLayout>
    id: main_view
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        spacing: 10
        padding: 10

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            size: root.width, root.height // 2

            FileChooserListView:
                id: midi_filechooser
                on_selection: main_view.selected(midi_filechooser.selection)

            Label:
                id: midifile_label
                text: "selected a midifile..."
                background_color: (1, 0, 0, 0.35)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                # Text Properties
                color: (0, 1, 0, 1)
                bold: True
                italic: True
                outline_width: 5
                outline_color: (0, 0, 0, 0)
                font_size: 18
                size_hint: (0.25, 0.5)
                pos_hint: {'center_x': .875}

            Label:
                id: midibus_label
                text: "Midi Bus"
                background_color: (1, 0, 0, 0.35)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                # Text Properties
                color: (0, 1, 0, 1)
                bold: True
                italic: True
                outline_width: 5
                outline_color: (0, 0, 0, 0)
                size_hint: (0.25, 0.5)
                pos_hint: {'center_x': .875}

            TextInput:
                id: midi_input
                multiline: False
                size_hint: (1, 0.5)

        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size: root.width, root.height // 2

            Label:
                id: ngram_slider_label
                text: "Set NGram length"
                font_size: 32

            Label:
                id: ngram_slider_out
                text: "1"
                font_size: 16

            Slider:
                min: 1
                max: 16
                step: 1
                orientation: "horizontal"
                on_value: root.slide_ngram(*args)

        RoundedButton:
            text: "Reset Defaults"
            pos_hint: {'center_x': 0.875}
            on_press: root.reset_press()

        RoundedButton:
            text: "Start"
            pos_hint: {'center_x': .875}
            on_press: root.start_press()

            background_color: (0, 0, 0, 0)
            canvas.before:
                Color:
                    rgba: (1, 0, 0, 0.65)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
